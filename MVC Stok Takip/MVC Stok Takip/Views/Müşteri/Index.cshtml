@using MVC_Stok_Takip.Models.EntitiyFreamwork
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Tbl_Musteri>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th> Ad</th>
        <th> Soyad</th>
        <th> Şehir</th>
        <th> Bakiye</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.id</td>
    <td>@x.ad</td>
    <td>@x.soyad</td>
    <td>@x.sehir</td>
    <td>@x.bakiye</td>

    <td><a href="/Müşteri/Sil/@x.id" class="btn btn-danger">Sil</a></td>
    <td><a href="/Müşteri/MusteriGetir/@x.id" class="btn btn-success">Güncelle</a></td>

</tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new {  sayfa }))
<a href="/Müşteri/YeniMusteri/" class=" btn btn-primary"> Yeni Müşteri Ekleme Paneli</a>
